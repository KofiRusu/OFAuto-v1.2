# OFAuto Environment Variables

# Base URLs
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ofauto

# Authentication - Clerk
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key
CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key

# Redis Cache
REDIS_URL=redis://localhost:6379

# OpenAI
OPENAI_API_KEY=sk-your_openai_api_key

# Encryption (32-character string)
ENCRYPTION_KEY=your32characterstringforencryption

# AWS Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# Vault (for production secrets management)
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=hvs.your_token_here

# Sentry Error Tracking
SENTRY_DSN=https://your_sentry_dsn.ingest.sentry.io/project_id

# Monitoring & Analytics
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# OnlyFans API Credentials (encrypted)
OF_USERNAME=your_of_username
OF_PASSWORD=your_of_password
OF_USER_AGENT=your_user_agent

# Deployment Variables
NODE_ENV=development
PORT=3000
